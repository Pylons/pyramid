[DEFAULT]
debug = true

[app:alchemy]
use = egg:{{project}}#app
reload_templates = true
debug_authorization = false
debug_notfound = false
debug_templates = true
default_locale_name = en
db_string = sqlite:///%(here)s/{{package}}.db
db_echo = false

[pipeline:main]
pipeline =
    egg:repoze.tm2#tm
    alchemy

[server:main]
use = egg:Paste#http
host = 0.0.0.0
port = 6543
